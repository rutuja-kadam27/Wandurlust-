<%- layout('layouts/boilerplate') %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 1rem;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    transform: scale(1.1);
  }

  .filter p {
    font-size: 0.8rem;
    margin-top: 0.3rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  .card-hover {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card-hover:hover {
    transform: scale(1.03);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  }

  .like-btn {
    transition: transform 0.2s ease;
  }

  .like-btn:hover {
    transform: scale(1.1);
  }

  .listing-image {
    cursor: pointer;
  }

  .search-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 1rem;
  }

  .search-input {
    width: 50%;
    border-radius: 25px;
    padding: 0.5rem 1rem;
    border: 1px solid #ccc;
  }

  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    margin-left: 0.5rem;
  }

  .btn-search i {
    margin-right: 0.4rem;
  }
</style>


<!-- ðŸ· Filters -->
<div id="filters">
  <div class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
  <div class="filter"><i class="fa-solid fa-bed"></i><p>Rooms</p></div>
  <div class="filter"><i class="fa-solid fa-mountain-city"></i><p>Iconic Cities</p></div>
  <div class="filter"><i class="fa-solid fa-mountain"></i><p>Mountain</p></div>
  <div class="filter"><i class="fa-solid fa-fort-awesome"></i><p>Castles</p></div>
  <div class="filter"><i class="fa-solid fa-person-swimming"></i><p>Pools</p></div>
  <div class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
  <div class="filter"><i class="fa-solid fa-cow"></i><p>Farms</p></div>
  <div class="filter"><i class="fa-solid fa-snowflake"></i><p>Arctic</p></div>
  <div class="filter"><i class="fa-solid fa-igloo"></i><p>Domes</p></div>
  <div class="filter"><i class="fa-solid fa-ship"></i><p>Boats</p></div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" />
      <label class="form-check-label ms-2" for="flexSwitchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
</div>

<!-- ðŸ  All Listings -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mt-3">
  <% if (allListings.length === 0) { %>
    <div class="text-center text-muted mt-5">
      <h5>No listings found for your search.</h5>
    </div>
  <% } else { %>
    <% for (let listing of allListings) { %>
      <div class="col d-flex justify-content-center">
        <div class="card shadow card-hover border-0 rounded-4" style="width: 20rem;">
          <div class="position-relative">
            <img
              src="<%= listing.image.url %>"
              onerror="this.src='/images/fallback.jpg';"
              class="card-img-top object-fit-cover rounded-top listing-image"
              style="height: 200px;"
              alt="Listing Image"
              data-href="/listings/<%= listing._id %>"
            />
            <button class="btn btn-light position-absolute top-0 end-0 m-2 rounded-circle shadow-sm like-btn">
              <i class="bi bi-heart"></i>
            </button>
          </div>

          <div class="card-body">
            <h5 class="card-title fw-semibold text-primary"><%= listing.title %></h5>
            <p class="card-text text-muted" style="min-height: 60px;">
              <%= listing.description || 'No description provided.' %>
            </p>
          </div>

          <div class="card-footer bg-white d-flex justify-content-between align-items-center px-3 py-2 border-0">
            <div>
              <small class="text-muted">
                <i class="bi bi-geo-alt-fill"></i> <%= listing.location %>, <%= listing.country %>
              </small><br />
              <span class="text-success fw-bold">
                â‚¹ <%= listing.price.toLocaleString("en-IN") %>/night
                <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
              </span>
            </div>
            <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-primary rounded-pill">View</a>
          </div>
        </div>
      </div>
    <% } %>
  <% } %>
</div>

<script>
  // âœ… TAX TOGGLE
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    const taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = (info.style.display !== "inline") ? "inline" : "none";
    }
  });

  // â¤ï¸ LIKE BUTTON
  document.querySelectorAll(".like-btn").forEach((btn) => {
    btn.addEventListener("click", (e) => {
      e.stopPropagation();
      const icon = btn.querySelector("i");
      icon.classList.toggle("bi-heart");
      icon.classList.toggle("bi-heart-fill");
      icon.classList.toggle("text-danger");
    });
  });

  // ðŸ–±ï¸ CLICKABLE IMAGE
  document.querySelectorAll(".listing-image").forEach((img) => {
    img.addEventListener("click", () => {
      const href = img.getAttribute("data-href");
      if (href) {
        window.location.href = href;
      }
    });
  });
</script>
