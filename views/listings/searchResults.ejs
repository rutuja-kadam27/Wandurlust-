<%- include("../includes/navbar") %>

<style>
  /* üåÑ Smooth hover and card aesthetics */
  .search-results .card {
    border: none;
    border-radius: 15px;
    transition: all 0.3s ease-in-out;
    overflow: hidden;
  }

  .search-results .card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .search-results img {
    height: 220px;
    object-fit: cover;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
  }

  .search-results .card-body {
    background: #fff;
    border-top: 1px solid #f0f0f0;
    text-align: center;
  }

  .search-results .card-title {
    font-weight: 600;
    color: #333;
  }

  .search-results .card-text {
    color: #777;
    font-size: 0.9rem;
  }

  .search-results .btn {
    border-radius: 20px;
    font-weight: 500;
  }

  .search-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .search-header h3 {
    font-weight: 700;
  }

  .no-results {
    text-align: center;
    color: #888;
    margin-top: 3rem;
    font-size: 1.1rem;
  }
</style>

<div class="container my-5 search-results">
  <div class="search-header">
    <h3>üîç Search Results for "<%= q %>"</h3>
    <hr class="w-25 mx-auto" />
  </div>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
/>

  <% if (results.length === 0) { %>
    <p class="no-results">No listings found matching your search.</p>
  <% } else { %>
    <div class="row g-4">
      <% results.forEach(listing => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card h-100 shadow-sm">
            <img
              src="<%= listing.image?.url || '/images/default.jpg' %>"
              alt="<%= listing.title %>"
              class="card-img-top"
            />
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <h5 class="card-title"><%= listing.title %></h5>
                <p class="card-text">
                  <i class="bi bi-geo-alt"></i>
                  <%= listing.location %>, <%= listing.country %>
                </p>
              </div>
              <a href="/listings/<%= listing._id %>" class="btn btn-primary btn-sm mt-2">
                View Details
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include("../includes/footer") %>
