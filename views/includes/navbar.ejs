<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-search i {
    margin: 0;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    font-size: 1rem;
    width: 220px;
  }

  .search-form {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .search-input {
      width: 100%;
    }
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-body-light">
  <div class="container-fluid">
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />

    <a class="navbar-brand fw-bold d-flex align-items-center" href="/listings">
      <i class="fa-brands fa-airbnb fa-lg me-2" style="color: #FF385C;"></i>
      Wanderlust
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Search Bar -->
      
 <div class="navbar-nav ms-auto me-3">
  <form action="/listings/search" method="GET" class="d-flex justify-content-center">
    <input
      type="text"
      name="search"
      class="form-control search-input"
      placeholder="Search by title, location, or country..."
      value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
    />
    <button type="submit" class="btn btn-search">
      <i class="bi bi-search"></i> Search
    </button>
  </form>
</div>

      <!-- Right-side Nav Links -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add new Listing</a>
        <% if (!currUser) { %>
        <a class="nav-link" href="/signup"><b>Sign Up</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>
        <% if (currUser) { %>
        <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
